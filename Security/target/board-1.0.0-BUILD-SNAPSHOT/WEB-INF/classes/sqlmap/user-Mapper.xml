<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<select id="getInfo" resultType="UserVO">
		SELECT 
			   *
		FROM tb_user
		WHERE USERID = 'admin'
	</select>

	<select id="getUserOne" resultType="UserVO">
		SELECT 
		 * 
		FROM tb_user
		<if test="userId != null">
		where userId = #{userId};
		</if>
		<if test="nickname != null">
		where nickname = #{nickname}
		</if>
	</select>
	
	<insert id="userJoin">
		insert into tb_user(id,userId,password,nickname,email,last_login,create_time,update_time)
		values (#{id},#{userId},#{password},#{nickName},#{email},now(),now(),now())
	</insert>






</mapper>